<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textViewContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|center_horizontal|center_vertical">

  <TextView
      android:id="@+id/ChatTextPlaceHolderLeft"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="TextView"
      android:visibility="gone" />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

    <ImageView
        android:id="@+id/avatar_bot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:srcCompat="@mipmap/bot_avatar_new_80"
        tools:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|center_horizontal|center_vertical"
        android:orientation="vertical"
        tools:visibility="visible">

      <TextView
          android:id="@+id/onlyTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="TextView"
          android:textSize="18sp" />

      <LinearLayout
          android:id="@+id/ThumbsContainer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingTop="15dp"
          android:visibility="gone"
          tools:visibility="visible">

        <TextView
            android:id="@+id/textView38"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/ThumbUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="{fa-thumbs-up}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/NumThumbUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="42"
            android:textSize="20sp"
            android:visibility="gone" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/ThumbDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:text="{fa-thumbs-down}"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/NumThumbDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="33"
            android:textSize="20sp"
            android:visibility="gone" />
      </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/avatar_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:srcCompat="@mipmap/self_avatar_80"
        tools:visibility="gone" />

  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:visibility="gone">

  </LinearLayout>

  <TextView
      android:id="@+id/ChatTextPlaceHolderRight"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="TextView"
      android:visibility="gone" />
</LinearLayout>