<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="#4472C4"
        android:foregroundGravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:visibility="visible"
        tools:visibility="visible">

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/settingBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:paddingLeft="30dp"
            android:text="{fa-angle-left}"
            android:textColor="#FFFFFF"
            android:textSize="52sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TextView"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#E5E5E5"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ManageAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#919191"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="{fa-cog}"
                android:textSize="52sp" />

            <LinearLayout
                android:id="@+id/ManageCourse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:textAlignment="textStart">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Manage Account"
                    android:textColor="#000000"
                    android:textSize="30sp" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="{fa-angle-right}"
                    android:textSize="52sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.05"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/EditPersonalInfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#919191"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="{fa-user}"
                android:textSize="52sp" />

            <LinearLayout
                android:id="@+id/ManageCourse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:textAlignment="textStart">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Edit Personal Info"
                    android:textColor="#000000"
                    android:textSize="30sp" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="{fa-angle-right}"
                    android:textSize="52sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Notification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#919191"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/button14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="{fa-bell}"
                android:textSize="42sp" />

            <LinearLayout
                android:id="@+id/Grade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:textAlignment="textStart">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Notification"
                    android:textColor="#000000"
                    android:textSize="30sp" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="{fa-angle-right}"
                    android:textSize="52sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ReportBug"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#919191"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/button15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="{fa-bug}"
                android:textSize="52sp" />

            <LinearLayout
                android:id="@+id/Preference"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:textAlignment="textStart">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Report Bug"
                    android:textColor="#000000"
                    android:textSize="30sp" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="{fa-angle-right}"
                    android:textSize="52sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/TextSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#919191"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/button16"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="{fa-text-width}"
                android:textSize="52sp" />

            <LinearLayout
                android:id="@+id/About"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:textAlignment="textStart">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Text Size"
                    android:textColor="#000000"
                    android:textSize="30sp" />

                <com.joanzapata.iconify.widget.IconTextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center"
                    android:text="{fa-angle-right}"
                    android:textSize="52sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.05"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/DarkMode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#919191"
            android:orientation="horizontal">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/button17"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="#FFFFFF"
                android:gravity="center"
                android:text="{fa-moon-o}"
                android:textSize="52sp" />

            <LinearLayout
                android:id="@+id/Setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:textAlignment="textStart">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Dark Mode"
                    android:textColor="#000000"
                    android:textSize="30sp" />

                <Switch
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="52sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:visibility="visible" />

    </LinearLayout>
</LinearLayout>